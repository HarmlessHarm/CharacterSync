{
  "manifest_version": 3,
	"author": "HarmlessHarm",
  "name": "D&D Character Sync",
  "description": "Syncs character data across D&D apps",
  "version": "0.1",
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
  "action": {
    "default_popup": "index.html",
    "default_icon": {
			"32":"assets/icons/cs_icon_32.png"
		}
  },
	"permissions": [
    "storage",
		"activeTab",
		"scripting",
		"tabs"
  ],
	"host_permissions": [
		"*://*.dndbeyond.com/characters/*",
		"*://harmlesskey.com/content/players/*"
	],
	"web_accessible_resources": [
		"assets/fonts/fa-solid-900.ttf",
		"assets/fonts/fa-solid-900.woff2",
		"assets/fonts/fa-brands-400.ttf",
		"assets/fonts/fa-brands-400.woff2"
	],
	"content_scripts": [
		{
			"css": [
				"css/font-awesome/fontawesome.min.css",
				"css/font-awesome/solid.min.css",
				"css/font-awesome/brands.min.css"
			]
		}
	]
}
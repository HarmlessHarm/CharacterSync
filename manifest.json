{
  "manifest_version": 3,
	"author": "Harm Manders & Key Roos",
  "name": "D&D Character Sync",
  "description": "Syncs character data across D&D apps",
  "version": "0.1",
	"background": {
		"service_worker": "src/extension/background.js",
		"type": "module"
	},
	"icons": {
		"16":"assets/icons/icon16.png",
		"32":"assets/icons/icon32.png",
		"48":"assets/icons/icon48.png",
		"128":"assets/icons/icon128.png"
	},
  "action": {
    "default_popup": "src/extension/index.html",
    "default_icon": {
			"16":"assets/icons/icon16.png",
			"32":"assets/icons/icon32.png",
			"48":"assets/icons/icon48.png",
			"128":"assets/icons/icon128.png"
		}
  },
	"permissions": [
    "storage",
		"activeTab",
		"scripting",
		"tabs"
  ],
	"externally_connectable": {
		"matches": [
			"*://localhost/*"
		]
	},
	"host_permissions": [
		"*://*.dndbeyond.com/characters/*",
		"*://harmlesskey.com/content/players/*",
		"*://*.harmlesskey.com/content/players/*",
		"*://harmlesskey.com/content/characters/*",
		"*://*.harmlesskey.com/content/characters/*"
	]
}